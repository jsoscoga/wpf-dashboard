<UserControl x:Class="dashboard.Views.StationStateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dashboard.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Margin="10 0 0 0" BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Station}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Franklin Gothic" FontStyle="Italic" FontSize="25" />
                <Frame x:Name="FrameTop" BorderThickness="50 30 50 30" BorderBrush="Red" Visibility="{Binding TopVisibility}" />
                <Frame x:Name="FrameCenter" BorderThickness="50 30 50 30" BorderBrush="Yellow" Visibility="{Binding CenterVisibility}" />
                <Frame x:Name="FrameBottom" BorderThickness="50 30 50 30" BorderBrush="Blue" Visibility="{Binding BottomVisibility}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
